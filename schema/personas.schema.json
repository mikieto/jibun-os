{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Schema for personas.yaml",
    "description": "Defines the structure for the personal personas master file.",
    "type": "object",
    "properties": {
      "personas": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^[A-Z][a-zA-Z0-9_]*-[0-9]{2}$"
            },
            "name": { "type": "string" },
            "role": { "type": "string" },
            "scope": {
              "type": "array",
              "items": { "type": "string" }
            },
            "tags": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "required": ["id", "name", "role", "scope", "tags"]
        }
      }
    },
    "required": ["personas"]
  }
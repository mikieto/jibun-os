{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OS Architecture Definition Schema (v3.x)",
  "description": "Schema for validating the structure of system_map.yaml based on the Multi-Layer Model.",
  "type": "object",
  "required": [
    "system_architecture"
  ],
  "properties": {
    "system_architecture": {
      "type": "object",
      "required": ["version", "layers", "other_root_files"],
      "properties": {
        "version": { "type": "string" },
        "layers": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "description", "files"],
            "properties": {
              "name": { 
                "type": "string",
                "enum": ["constitution", "legislation", "precedents", "records", "logs"]
              },
              "description": { "type": "string" },
              "files": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/fileEntry"
                }
              }
            }
          }
        },
        "other_root_files": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/fileEntry"
          }
        }
      }
    }
  },
  "definitions": {
    "fileEntry": {
      "type": "object",
      "required": ["path", "role", "description", "context_level"],
      "properties": {
        "path": { "type": "string" },
        "role": { "type": "string" },
        "description": { "type": "string" },
        "context_level": { "type": "string" },
        "dependencies": {
          "type": "array",
          "items": { "type": "string" }
        },
        "status": { "type": "string" }
      }
    }
  },
  "additionalProperties": true
}